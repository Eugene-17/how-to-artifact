<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% @banners.each_with_index do |banner, index| %>
      <% if index == 0 %>
        <li data-target="#carouselExampleIndicators" data-slide-to="
          <% index %>" class="active"></li>
      <% else %>
        <li data-target="#carouselExampleIndicators" data-slide-to="
          <% index %>"></li>
      <% end %>
    <% end %>
  </ol>
  <div class="carousel-inner">
    <% @banners.each_with_index do |banner, index| %>
      <% if index == 0 %>
        <div class="carousel-item active">
          <%= link_to banner.link, method: :get do %>
            <%= image_tag(banner.image.url, :class => "d-block w-100 banner-image") %>
          <% end %>
        </div>
      <% else %>
        <div class="carousel-item">
          <%= link_to banner.link, method: :get do %>
            <%= image_tag(banner.image.url, :class => "d-block w-100 banner-image") %>
          <% end %>
        </div>
      <% end %>
    <% end %>

  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>