<top_nav>
  <div id='overlay' class='overlay'></div>
  <div id="top_nav" class="top_nav_container">

    <%= link_to root_path, method: :get do %>
      <%= image_tag("logo_gold.png", :class => "top_nav_logo") %>
    <% end %>

    <% if user_signed_in? %>
      <div class='top_nav_profile_container'>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <button class="top_nav_button">
            SIGN OUT
          </button>
        <% end %>

        <div class="dropdown">
          <button class="top_nav_button">DROPDOWN
          </button>
          <div class="dropdown-content">
            <a href="#">Link 1</a>
            <a href="#">Link 2</a>
            <a href="#">Link 3</a>
          </div>
        </div>

        <% if current_user.role == 1 %>
          <%= link_to admin_path, method: :get do %>
            <button id='profile-btt' class="top_nav_button">
              <%= current_user.nickname %>
            </button>
          <% end %>
        <% else %>
          <%= link_to current_user, method: :get do %>
            <button id='profile-btt' class="top_nav_button">
              <%= current_user.nickname.upcase %>
            </button>
          <% end %>
        <% end %>

        <% if current_user.role == 1 %>
          <%= link_to new_post_path, method: :get do %>
            <button class="top_nav_button">
              NEW POST
            </button>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <button id='login_btt' class="top_nav_button">
        LOGIN/SIGNUP
      </button>
      <%= render partial: 'layouts/login_btt', layout: 'layouts/login_btt' %>
    <% end %>

    <%= link_to about_path, method: :get do %>
      <button class="top_nav_button">
        ABOUT
      </button>
    <% end %>

    <%= link_to category_path(2), method: :get do %>
      <button class="top_nav_button">
        GUIDES
      </button>
    <% end %>

    <%= link_to category_path(1), method: :get do %>
      <button class="top_nav_button">
        NEWS
      </button>
    <% end %>

  </div>
</top_nav>